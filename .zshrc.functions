#!/bin/sh

# User defined functions

clean () {
	TARGET_DIR="."

	if [ -n "$1" ]; then
		TARGET_DIR="$1"
	fi
	find "$TARGET_DIR" -name "*.[od]" -type f
}

# shellcheck disable=SC2039
git_rename_branch () {
	BRANCH=$(git rev-parse --abbrev-ref HEAD)

	if [ -z "$1" ]; then
		echo "Usage: $0 NAME"
	elif [ "$?" = 1 ]; then
		echo "Renaming '$BRANCH' to '$1'"
		git branch -m "$1"
		git push origin --delete "$BRANCH"
		git push -u origin "$1"
	else
		echo "couldn't find current branch"
	fi
}
